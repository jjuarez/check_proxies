#!/usr/bin/env ruby

$:.unshift( File.join( File.dirname( __FILE__), *%w[.. lib] ) )
require 'check_proxies'

module App
  ROOT = File.join( File.dirname( __FILE__ ), '..' )
  
  def self.run( )
    CheckProxies::Cli::instance.execute( File.join( ROOT, CheckProxies::Config::instance[:proxies_file] ), CheckProxies::Config::instance[:url] )
  end   
end

App::run